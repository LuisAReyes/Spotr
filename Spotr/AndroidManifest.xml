        <!-- Settings Activity -->
        <activity android:name=".SettingsActivity" >
            <intent-filter >
                <action android:name="com.csun.spotr.SettingsActivty" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <!-- Place Activity -->
        <activity android:name=".PlaceActivity" >
            <intent-filter >
                <action android:name="com.csun.spotr.PlaceActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
            
        <!-- Place Detail Activity -->
        <activity android:name=".PlaceDetailActivity" >
            <intent-filter >
                <action android:name="com.csun.spotr.PlaceDetailActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Google Map API -->
        <uses-library android:name="com.google.android.maps" />
    </application>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>