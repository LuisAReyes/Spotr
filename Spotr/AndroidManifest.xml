<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.csun.spotr"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:debuggable="true">

        <!-- Main Activity -->
        <activity android:name=".SpotrActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity android:name=".LoginActivity" >
            <intent-filter >
                <action android:name="com.csun.spotr.LoginActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Signup Activity -->
        <activity android:name=".SignupActivity" >
            <intent-filter >
                <action android:name="com.csun.spotr.SignupActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- Main Menu Activity -->
        <activity android:name=".MainMenuActivity" >
            <intent-filter >
                <action android:name="com.csun.spotr.MainMenuActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Challenge Activity -->
        <activity android:name=".ChallengeActivity" >
            <intent-filter >
                <action android:name="com.csun.spotr.ChallengeActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Map View Activity -->
        <activity android:name=".MapViewActivity" >
            <intent-filter >
                <action android:name="com.csun.spotr.MapViewActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Reward Activity -->
        <activity android:name=".RewardActivity" >
            <intent-filter >
                <action android:name="com.csun.spotr.RewardActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Challenge Info Activity -->
        <activity android:name=".ChallengeInfoActivity" >
            <intent-filter >
                <action android:name="com.csun.spotr.ChallengeInfoActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <!-- Friend List Activity -->
        <activity android:name=".FriendListActivity" >
            <intent-filter >
                <action android:name="com.csun.spotr.FriendListActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Challenge Info Activity -->
        <activity android:name=".ProfileActivity" >
            <intent-filter >
                <action android:name="com.csun.spotr.ProfileActivity" />
                <category android:name="android.intent.category.DEFAULT" />
