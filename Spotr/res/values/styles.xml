    <!-- Colors -->
    <color name="aluminum1">#eeeeec</color>
    <color name="aluminum4">#888a85</color>
    <color name="aluminum5">#555753</color>
    <color name="aluminum6">#2e3436</color>
    <color name="darkTurquoise">#33b5e5</color>
    <!-- End Colors -->
    
    <!-- Title Bar -->
    <style name="CustomWindowTitleBackground">
        <item name="android:background">@color/aluminum6</item>
    </style>
 
    <style name="CustomTheme" parent="android:Theme">
        <item name="android:windowTitleSize">50dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>
    <!-- End Title Bar -->
    
    <!-- TabWidget -->
    <style name="TabBackground" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tab_selector</item>
    </style>
    
    <style name="TabText" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/aluminum1</item>
    </style>
    <!-- End TabWidget -->
        
    <!-- Main Menu -->
    <style name="MainMenuButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/aluminum6</item>
        <item name="android:background">@null</item>
    </style>
    
    <style name="NotificationHandle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@color/aluminum4</item>
    </style>
    <!-- End Main Menu -->

    <!-- Spots -->
    <!-- Spots: Missions tab -->    
    <style name="MissionsList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:dividerHeight">20dp</item>
        <item name="android:divider">@null</item>
        <item name="android:scrollbars">none</item>
        <item name="android:background">@color/aluminum1</item>
    </style>
    
    <style name="MissionRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/spots_mission_selector</item>
    </style>
    
    <style name="MissionIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="MissionName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/aluminum1</item>
    </style>
    
    <style name="MissionPointValue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal|right</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/aluminum1</item>
    </style>
    
    <style name="MissionPointValueAbbrev">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/aluminum1</item>
    </style>
    <!-- End Spots: Missions tab -->
    
    
    <!-- Spots: Missions Tab: Open Treasure Button-->
    <style name="TreasureButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>
    
     <!-- Comment Button -->
    <style name="CommentButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textSize">8dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>
    
</resources>