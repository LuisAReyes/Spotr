<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="130dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/place_info_xml_imageview_picture"
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TableRow>

                <TextView
                    android:id="@+id/place_info_xml_textview_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#F05411"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/place_info_xml_textview_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/place_info_xml_textview_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/place_info_xml_textview_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#124CFC"
                    android:textStyle="italic" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <Button
        android:id="@+id/place_info_xml_button_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_marginTop="4dp"
        android:background="#FAB002" />

    <com.google.android.maps.MapView
        android:id="@+id/place_info_xml_mapview"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:apiKey="0kqsfxjLdh6hBSw6P1O21ednBAHof_q1GuRuffg"
        android:clickable="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_marginTop="4dp"
        android:background="#FC1900" />

</LinearLayout>