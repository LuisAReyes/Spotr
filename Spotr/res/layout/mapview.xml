<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#00C1E8"
	>

    <TableLayout
        android:layout_width="400dp"
        android:layout_height="55dp" >

        <TableRow >
            <Button
                android:id="@+id/mapview_xml_button_change_view"
                style="@style/TreasureButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/mapview_xml_button_view_str" />

            <Button
                android:id="@+id/mapview_xml_button_locate"
                style="@style/TreasureButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:enabled="false"
                android:text="@string/mapview_xml_button_locate_str" />

            <Button
                android:id="@+id/mapview_xml_button_places"
                style="@style/TreasureButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:enabled="false"
                android:text="@string/mapview_xml_button_place_str" />
        </TableRow>
    </TableLayout>

    <com.google.android.maps.MapView
        android:id="@+id/mapview_xml_map"
        android:layout_width="fill_parent"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_height="390dp"
        android:apiKey="0kqsfxjLdh6hBSw6P1O21ednBAHof_q1GuRuffg"
        android:clickable="true" />

</LinearLayout>