<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tablelayout_challenge"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TableRow >
        <EditText
            android:id="@+id/challenge_xml_edittext_search_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:hint="Search" />

        <ImageView
            android:id="@+id/challenge_xml_imageview_search_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow >
	        <Button
            	android:id="@+id/challenge_xml_button_sort_by"
	            android:text="@string/challenge_xml_button_sort_by" 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content">
	        </Button>
	        <TextView />
    </TableRow>

    <TableRow >

        <ListView
            android:id="@+id/challenge_xml_listview_challenge"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.9" >
        </ListView>
    </TableRow>

</TableLayout>