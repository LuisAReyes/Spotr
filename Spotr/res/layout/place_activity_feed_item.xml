<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/place_activity_feed_item_xml_tablelayout_table"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TableRow>
        <ImageView
            android:id="@+id/place_activity_feed_item_xml_imageview_user_picture"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/place_activity_feed_item_xml_textview_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textStyle="bold"
			/>
    </TableRow>
    
    <TableRow>
        <View android:layout_marginRight="6dp" />
        <TextView
            android:id="@+id/place_activity_feed_item_xml_textview_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:textColor="@android:color/black"
			/>
    </TableRow>

    <TableRow android:id="@+id/place_activity_feed_item_xml_tablerow_feed_location" >
        <View android:layout_marginRight="6dp" />
        <TextView
            android:id="@+id/place_activity_feed_item_xml_textview_where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#BF0030"
            android:textStyle="bold" />
    </TableRow>

    <TableRow android:id="@+id/place_activity_feed_item_xml_tablerow_checkin" >
        <View android:layout_marginRight="6dp" />
        <TextView
            android:id="@+id/place_activity_feed_item_xml_textview_checkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#0A88AB"
            android:textStyle="bold" />
    </TableRow>

    <TableRow android:id="@+id/place_activity_feed_item_xml_tablerow_write_on_wall" >
        <View android:layout_marginRight="6dp" />
        <TextView
            android:id="@+id/place_activity_feed_item_xml_textview_write_on_wall_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#0A88AB"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/place_activity_feed_item_xml_textview_write_on_wall_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#0A88AB"
            android:textStyle="bold" />
    </TableRow>
    
   <TableRow android:id="@+id/place_activity_feed_item_xml_tablerow_snap_picture_title" >
        <View android:layout_marginRight="6dp" />
        <TextView
            android:id="@+id/place_activity_feed_item_xml_textview_snap_picture_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#0A88AB"
            android:textStyle="bold" />
    </TableRow>
  
  	<TableRow android:id="@+id/place_activity_feed_item_xml_tablerow_snap_picture_box" >
        <View android:layout_marginRight="6dp" />
        <ImageView
            android:id="@+id/place_activity_feed_item_xml_imageview_snap_picture_box"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_launcher" />
    </TableRow>


</TableLayout>