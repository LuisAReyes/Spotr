<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/login_xml_imageview_logo_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_launcher" />


    <TableLayout
        android:layout_width="452dp"
        android:layout_height="537dp" >

        <TableRow >

            <TextView
                android:text="@string/login_xml_textview_email_str"
                android:width="120px" />

            <EditText
                android:id="@+id/login_xml_edittext_email_id"
                android:width="200px" >
                <requestFocus />
            </EditText>
        </TableRow>

        <TableRow >
            <TextView
                android:text="@string/login_xml_textview_password_str"
                android:width="120px" />

            <EditText
                android:id="@+id/login_xml_edittext_password_id"
                android:width="200px" />
        </TableRow>

        <TableRow >

            <TextView />

            <CheckBox
                android:id="@+id/login_xml_checkbox_remember_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_xml_checkbox_remember_password_str" />
        </TableRow>

        <TableRow >

            <TextView />

            <CheckBox
                android:id="@+id/login_xml_checkbox_visible_characters"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_xml_checkbox_visible_password_str" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TableRow>

        <TableRow >

            <TextView />
            <Button
                android:id="@+id/login_xml_button_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_xml_button_login_str" />
        </TableRow>

        <TableRow >
            <TextView />
            <Button 
                android:id="@+id/login_xml_button_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_xml_button_signup_str"/>
        </TableRow>

        <TableRow >
            <TextView />
        </TableRow>

        <TableRow >
            <TextView />
        </TableRow>

        <TableRow >
            <TextView />
            <TextView
                android:id="@+id/login_xml_textview_signup_link"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:autoLink="web"
                android:text="@string/login_xml_hyperlink_signup_str"
            />
        </TableRow>
    </TableLayout>

</LinearLayout>