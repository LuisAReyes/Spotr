<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/leaderboard_xml_tablelayout_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
		>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/leaderboard_xml_textview_rank"
            	android:padding="2dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rank" />

            <TextView
                android:id="@+id/leaderboard_xml_textview_username"
            	android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username" />

            <TextView
                android:id="@+id/leaderboard_xml_textview_cd"
            	android:padding="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CD" />

            <TextView
                android:id="@+id/leaderboard_xml_textview_pv"
            	android:padding="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PV" />

            <TextView
                android:id="@+id/leaderboard_xml_textview_pts"
            	android:padding="5dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pts" />
        </TableRow>
    </TableLayout>
    
    <ListView
        android:id="@+id/leaderboard_xml_listview_users"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/white" >
    </ListView>

</LinearLayout>